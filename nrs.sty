\newcommand{\wrap}[4]{
  \begin{wrapfigure}{#1}{#2\textwidth}
    \begin{center} 
      \includegraphics[width=#2\textwidth]{#3} 
      \caption{#4} 
    \end{center} 
  \end{wrapfigure}
}

\newcommand{\centerfigure}[4]{
  \begin{figure}[htbp] 
    \begin{center} 
      \includegraphics[width=#1\textwidth]{#2} 
      \caption{#3} 
      \label{#4}
    \end{center} 
  \end{figure}
}

